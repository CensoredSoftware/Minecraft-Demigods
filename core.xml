<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="Demigods">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <target name="init">
        <mkdir dir="core/bin"/>
        <mkdir dir="theogony/bin"/>
    	<mkdir dir="build"/>
        <copy includeemptydirs="false" todir="core/bin">
            <fileset dir="src/core/java">
                <exclude name="**/*.java"/>
            </fileset>
            <filterset>
                <filter token="BUILD" value="${env.BUILD_NUMBER}" />
            </filterset>
        </copy>
        <copy includeemptydirs="false" todir="theogony/bin">
            <fileset dir="src/theogony/java">
                <exclude name="**/*.java"/>
            </fileset>
            <filterset>
                <filter token="BUILD" value="${env.BUILD_NUMBER}" />
            </filterset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="core/bin"/>
        <delete dir="theogony/bin"/>
    	<delete dir="build"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <path id="Demigods.classpath">
            <pathelement location="lib/Bukkit.jar"/>
            <pathelement location="lib/WorldEdit.jar"/>
            <pathelement location="lib/WorldGuard.jar"/>
            <pathelement location="lib/Factions.jar"/>
        </path>
        <javac debug="true" debuglevel="${debuglevel}" destdir="core/bin" source="${source}" target="${target}">
            <src path="src/core/java"/>
            <classpath refid="Demigods.classpath"/>
        </javac>
        <jar jarfile="build/Demigods.jar" basedir="core/bin"/>
        <path id="Theogony.classpath">
            <pathelement location="lib/Bukkit.jar"/>
            <pathelement location="build/Demigods.jar"/>
        </path>
        <javac debug="true" debuglevel="${debuglevel}" destdir="theogony/bin" source="${source}" target="${target}">
            <src path="src/theogony/java"/>
            <classpath refid="Theogony.classpath"/>
        </javac>
        <jar jarfile="build/Theogony.jar" basedir="theogony/bin"/>
    </target>
</project>